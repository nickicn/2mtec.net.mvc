@model List<Aluno>
@{
    ViewData["Title"] = "Home ";
    var turmas = (List<Turma>)ViewData["Turma"];
        string Cor(string nome)
        {
            return turmas
                .Where(t => t.Nome == nome)
                .Select(t => t.Cor)
                .FirstOrDefault();
        }
}

<section class="pt-5 pb-3 text-center container">
    <div class="row">
        <div class="col mx-auto">
            <h1>2ºMtec</h1>
            <div class="group">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-dark btn-filter">Ver
                    Todos</button>
                @foreach (var turma in turmas)
                {<button id="btn-aço" class="btn btn-sm my-2 text-white btn-filter"
                    style="background-color:@turma.Cor">@turma.Nome</button>
                }
            </div>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var aluno in Model)
            {
                 <!-- Card Pokemon - Inicio -->
                    <div class="col">
                <div class="card shadow-sm cursor-pointer planta venenoso" onclick="GetInfo(003)">
                    <img src="@aluno.Imagem" class="card-img-top" width="100%" height="300" alt="Venusaur" />
                    <div class="card-body">
                        <p class="card-text mb-0">@aluno.Numero</p>
                        <h3 class="card-title">@aluno.Nome</h3>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">

                                <a href="#" class="btn my-2 text-white" style="background-color:@Cor(aluno.Turma)">@aluno.Turma</a> 
              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card Pokemon - Fim -->
            }

                    
            <div id="zeroPokemon" class="col-lg-12 text-center" hidden>
                <h1 class="my-3 text-danger">Nenhum Aluno Encontrado</h1>
            </div>
        </div>


    </div>
</div>
